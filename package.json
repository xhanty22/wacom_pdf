{
  "name": "complementoshumanos",
  "productName": "Complementos Humanos",
  "version": "1.0.1",
  "author": "Carlos Gomez",
  "description": "Firma de documentos",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dist": "electron-builder -w",
    "release": "electron-builder -w -p always",
     "dev": "electronmon ."
  },
  "dependencies": {
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9",
    "socket.io": "^4.8.1",
    "systeminformation": "^5.27.1"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.3"
  },
  "build": {
    "appId": "com.complementoshumanos_stage.app",
    "productName": "Complementos Humanos",
    "compression": "maximum",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**",
      "!**/*.md",
      "!**/*.txt",
      "!**/test/**",
      "!**/tests/**",
      "!**/*.test.js",
      "!**/*.spec.js",
      "!versiones/**",
      "!**/.git/**",
      "!**/.gitignore",
      "!**/.editorconfig",
      "!**/.eslintrc*",
      "!**/.prettierrc*",
      "!forge.config.js",
      "!**/README*",
      "!**/CHANGELOG*",
      "!**/LICENSE*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": [
            "x64"
          ]
        }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "ComplementosHumanos_stage-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "perMachine": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://stage.siamo.com.co/tablet/updates/siamo/"
      }
    ]
  }
}
