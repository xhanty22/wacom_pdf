{
  "name": "complementoshumanos",
  "productName": "Complementos Humanos",
  "version": "1.0.0",
  "author": "Develop",
  "description": "Gesti√≥n Interna de Complementos Humanos",
  "main": "main.js",
  "scripts": {
    "start": "electron-forge start",
    "dist": "electron-builder -w",
    "release": "electron-builder -w -p always"
  },
  "dependencies": {
    "socket.io": "^4.8.1",
    "systeminformation": "^5.27.1",
    "electron-log": "^5.2.2",
    "electron-updater": "^6.3.9"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.1",
    "@electron-forge/maker-deb": "^7.8.1",
    "@electron-forge/maker-rpm": "^7.8.1",
    "@electron-forge/maker-zip": "^7.8.1",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.1",
    "@electron-forge/plugin-fuses": "^7.8.1",
    "@electron/fuses": "^1.8.0",
    "electron": "^33.2.1",
    "electron-builder": "^24.13.3"
  },
  "build": {
    "appId": "com.complementoshumanos.app",
    "productName": "Complementos Humanos",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*",
      "!dist/**",
      "!node_modules/.cache/**"
    ],
    "win": {
      "target": [
        { "target": "nsis", "arch": ["x64"] }
      ],
      "icon": "assets/icon.ico",
      "artifactName": "ComplementosHumanos-${version}-Setup.${ext}"
    },
    "nsis": {
      "oneClick": true,
      "allowElevation": true,
      "perMachine": false,
      "runAfterFinish": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://localhost/updates/complementos/win/"
      }
    ]
  }
}